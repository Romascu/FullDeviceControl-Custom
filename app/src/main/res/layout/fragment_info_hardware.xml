<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <org.namelessrom.devicecontrol.modules.info.hardware.FingerprintView
        android:id="@+id/hardware_fingerprint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_fingerprint_black_24dp"
        app:iconTint="?attr/colorAccent"
        app:title="@string/fingerprint" />

    <org.namelessrom.devicecontrol.modules.info.hardware.GpsView
        android:id="@+id/hardware_gps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_place_black_24dp"
        app:iconTint="?attr/colorAccent"
        app:title="@string/gps" />

</LinearLayout>
